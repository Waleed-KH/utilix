{
	"name": "utilix",
	"version": "0.1.3",
	"type": "module",
	"license": "MIT",
	"author": "Waleed Khaled <https://github.com/Waleed-KH>",
	"description": "A modern and flexible utilities library for JavaScript",
	"keywords": [
		"utils",
		"utilities"
	],
	"scripts": {
		"build": "tsc && pnpm build:rollup",
		"build:rollup": "rollup --config rollup.config.ts --configPlugin esbuild"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"unpkg": "dist/index.global.js",
	"jsdelivr": "dist/index.global.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/utilixjs/utilix.git"
	},
	"bugs": {
		"url": "https://github.com/utilixjs/utilix/issues"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.1",
		"esbuild": "^0.17.18",
		"fs-extra": "^11.1.1",
		"rollup": "^3.21.5",
		"rollup-plugin-dts": "^5.3.0",
		"rollup-plugin-esbuild": "^5.0.0",
		"typescript": "^5.0.4"
	}
}
