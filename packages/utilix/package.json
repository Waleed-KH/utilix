{
	"name": "utilix",
	"version": "0.3.0",
	"type": "module",
	"license": "MIT",
	"author": "Waleed Khaled <https://github.com/Waleed-KH>",
	"description": "Modern and flexible utilities library for JavaScript",
	"keywords": [
		"utils",
		"utilities"
	],
	"scripts": {
		"build": "tsx ./scripts/build.ts",
		"update": "tsx ./scripts/update.ts",
		"typecheck": "tsc --noEmit",
		"tsc:build": "tsc --build"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"unpkg": "dist/index.global.js",
	"jsdelivr": "dist/index.global.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./*": {
			"types": "./dist/*/index.d.ts",
			"import": "./dist/*/index.js",
			"require": "./dist/*/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/utilixjs/utilix.git"
	},
	"bugs": {
		"url": "https://github.com/utilixjs/utilix/issues"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"esbuild": "^0.19.8",
		"fs-extra": "^11.2.0",
		"rollup": "^4.7.0",
		"rollup-plugin-dts": "^6.1.0",
		"rollup-plugin-esbuild": "^6.1.0",
		"rollup-plugin-tsconfig-paths": "^1.5.2",
		"tsx": "^4.6.2",
		"typescript": "^5.3.3"
	}
}
