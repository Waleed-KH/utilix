{
	"name": "utilix",
	"version": "0.3.0",
	"type": "module",
	"license": "MIT",
	"author": "Waleed Khaled <https://github.com/Waleed-KH>",
	"description": "A modern and flexible utilities library for JavaScript",
	"keywords": [
		"utils",
		"utilities"
	],
	"scripts": {
		"build": "pnpm typecheck && tsx ./scripts/build.ts",
		"build:rollup": "rollup --config rollup.config.ts --configPlugin esbuild",
		"update": "tsx ./scripts/update.ts",
		"typecheck": "tsc --noEmit"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"unpkg": "dist/index.global.js",
	"jsdelivr": "dist/index.global.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./*": {
			"types": "./dist/*/index.d.ts",
			"import": "./dist/*/index.js",
			"require": "./dist/*/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/utilixjs/utilix.git"
	},
	"bugs": {
		"url": "https://github.com/utilixjs/utilix/issues"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.2",
		"esbuild": "^0.19.4",
		"fs-extra": "^11.1.1",
		"rollup": "^3.29.4",
		"rollup-plugin-dts": "^6.0.2",
		"rollup-plugin-esbuild": "^5.0.0",
		"rollup-plugin-tsconfig-paths": "^1.5.1",
		"tsx": "^3.13.0",
		"typescript": "^5.2.2"
	}
}
